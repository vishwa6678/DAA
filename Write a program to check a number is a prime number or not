
#include <stdio.h>
int main() {
    int num, i, flag = 0;
    printf("Enter a number: ");
    scanf("%d", &num);
    for (i =1; i <= num; ++i) {
        if (num % i == 0) {
            flag=flag+1;
        }
    }
    if (num == 1) 
    {
        printf("1 is neither prime nor composite.");
    } 
    else {
        if (flag ==2 )
            printf("%d is a prime number.", num);
        else
            printf("%d is not a prime number.", num);
    }
    return 0;
}
